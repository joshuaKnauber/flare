{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "flare",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "scope": [
          {
            "name": "python",
            "cmd": "python",
            "args": true
          }
        ]
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeFile": true,
        "writeFile": true,
        "scope": ["$DATA/*", "$DATA/Flare App/*"]
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.flare.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Flare",
        "skipTaskbar": true,
        "hiddenTitle": true,
        "transparent": true,
        "decorations": false,
        "width": 350,
        "height": 40
      }
    ]
  }
}
